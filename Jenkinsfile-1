pipeline {
    agent any

    tools {
        maven 'Maven_3_8_7' // your Maven installation name
    }

    environment {
        SONAR_TOKEN = credentials('SONAR_TOKEN_2')
        SERVER_PORT = '9090'  // avoid conflicts
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/akshaybharadwaj1595/SAST_SAC_DAST-2.git'
            }
        }

        stage('Build & Unit Test') {
            steps {
                bat 'mvn clean install -DskipTests'
            }
            post {
                success {
                    junit 'target\\surefire-reports\\**\\*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    bat """
                        mvn clean verify sonar:sonar ^
                        -Dsonar.projectKey=Demo ^
                        -Dsonar.host.url=%SONAR_HOST_URL% ^
                        -Dsonar.login=%SONAR_TOKEN%
                    """
                }
            }
        }

        stage('Docker Build & Run') {
            steps {
                bat """
                    docker build -t devops/demo-app:latest .
                    docker run -d -p %SERVER_PORT%:8080 --name demo_app devops/demo-app:latest
                """
            }
        }

        stage('ZAP DAST Scan') {
            steps {
                bat 'if not exist "%WORKSPACE%\\ZAP_Reports" mkdir "%WORKSPACE%\\ZAP_Reports"'
                bat 'cd /d "C:\\ZAP\\ZAP_2.16.0_Crossplatform\\ZAP_2.16.0" && zap.bat -cmd -quickurl http://localhost:%SERVER_PORT% -quickout "%WORKSPACE%\\ZAP_Reports\\ZAP_Output.html"'
            }
        }

        stage('Snyk Scan') {
            steps {
                bat 'if not exist "%WORKSPACE%\\Snyk_Reports" mkdir "%WORKSPACE%\\Snyk_Reports"'
                bat 'snyk test --all-projects --json > "%WORKSPACE%\\Snyk_Reports\\snyk.json"'
            }
        }
    }

    post {
        always {
            bat 'docker stop demo_app || exit 0'
            bat 'docker rm demo_app || exit 0'
        }
    }
}
