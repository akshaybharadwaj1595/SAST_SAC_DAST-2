pipeline {
    agent any

    tools {
        maven 'Maven_3_8_7'  // Must match your Jenkins Maven installation name
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/akshaybharadwaj1595/SAST_SAC_DAST-2.git'
            }
        }

        stage('Build & Unit Test') {
            steps {
                bat 'mvn clean install'
            }
            post {
                success {
                    junit 'target\\surefire-reports\\**\\*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {  // <-- Use exact name from Jenkins config
                    bat '''
                        echo SONAR_HOST_URL=%SONAR_HOST_URL%
                        echo SONAR_AUTH_TOKEN=****

                        mvn clean verify sonar:sonar ^
                        -X ^
                        -Dsonar.projectKey=devops-project-key ^
                        -Dsonar.host.url="%SONAR_HOST_URL%" ^
                        -Dsonar.login="%SONAR_AUTH_TOKEN%"
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Docker Build') {
            steps {
                bat 'docker build -t devops/demo-app:latest .'
            }
        }

        stage('Security Scans') {

            stages {

                stage('Snyk Container Scan') {
                    steps {
                        bat 'snyk container test devops/demo-app:latest || exit /b 0'
                    }
                }

                stage('Snyk SCA Scan') {
                    steps {
                        bat 'mvn snyk:test -fn || exit /b 0'
                    }
                }

                stage('ZAP DAST Scan') {
                    steps {
                        bat 'if not exist "%WORKSPACE%\\ZAP_Reports" mkdir "%WORKSPACE%\\ZAP_Reports"'
                        bat '''
                            cd /d "C:\\ZAP\\ZAP_2.16.0_Crossplatform\\ZAP_2.16.0" && ^
                            zap.bat -cmd ^
                            -quickurl http://localhost:8080 ^
                            -quickout "%WORKSPACE%\\ZAP_Reports\\ZAP_Output.html"
                        '''
                    }
                }

                stage('Checkov Scan') {
                    steps {
                        bat '"C:\\Users\\Akshay Bharadwaj\\AppData\\Roaming\\Python\\Python313\\Scripts\\checkov.exe" -s -f main.tf || exit /b 0'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                bat '''
                    timeout /t 60
                    java -jar target\\demo-0.0.1-SNAPSHOT.jar
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'ZAP_Reports\\ZAP_Output.html',
                             allowEmptyArchive: true
        }
    }
}
