pipeline {
    agent any

    tools {
        maven 'Maven_3_8_7' // Make sure this Maven tool exists in Jenkins
    }

    environment {
        SONAR_TOKEN = credentials('SONAR_TOKEN_2') // SonarQube token credential
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/akshaybharadwaj1595/SAST_SAC_DAST-2.git'
            }
        }

        stage('Build & Unit Test') {
            steps {
                bat 'mvn clean install'
            }
            post {
                success {
                    junit 'target\\surefire-reports\\**\\*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') { // SonarQube server name
                    bat """
                        mvn clean verify sonar:sonar ^
                        -Dsonar.projectKey=Demo ^
                        -Dsonar.host.url=%SONAR_HOST_URL% ^
                        -Dsonar.login=%SONAR_TOKEN%
                    """
                }
            }
        }

        stage('Docker Build') {
            steps {
                bat 'docker build -t devops/demo-app:latest .'
            }
        }

        stage('ZAP DAST') {
            steps {
                bat 'if not exist "%WORKSPACE%\\ZAP_Reports" mkdir "%WORKSPACE%\\ZAP_Reports"'
                bat 'cd /d "C:\\ZAP\\ZAP_2.16.0_Crossplatform\\ZAP_2.16.0" && zap.bat -cmd -quickurl https://www.example.com -quickout "%WORKSPACE%\\ZAP_Reports\\ZAP_Output.html"'
            }
        }

        stage('Snyk Scan') {
            steps {
                bat 'snyk test --all-projects --json > "%WORKSPACE%\\Snyk_Report.json" || exit 0'
            }
        }

        stage('Checkov Scan') {
            steps {
                bat 'checkov -d . -o json > "%WORKSPACE%\\Checkov_Report.json" || exit 0'
            }
        }

    }

    post {
        always {
            archiveArtifacts artifacts: 'ZAP_Reports\\*.html, Snyk_Report.json, Checkov_Report.json', allowEmptyArchive: true
        }
    }
}
