pipeline {
    agent any

    tools {
        maven 'Maven_3_8_7' // your Maven tool name in Jenkins
    }

    environment {
        SONAR_TOKEN = credentials('SONAR_TOKEN_2') // Jenkins credential ID for SonarQube token
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/akshaybharadwaj1595/SAST_SAC_DAST-2.git'
            }
        }

        stage('Build & Unit Test') {
            steps {
                bat 'mvn clean install'
            }
            post {
                success {
                    junit 'target\\surefire-reports\\**\\*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') { // SonarQube server name configured in Jenkins
                    bat """
                        mvn clean verify sonar:sonar ^
                        -Dsonar.projectKey=Demo ^
                        -Dsonar.host.url=%SONAR_HOST_URL% ^
                        -Dsonar.login=%SONAR_TOKEN% ^
                        -X
                    """
                }
            }
        }

        // (other stages like Docker Build, Security Scans, Deploy can follow here)
    }

    post {
        always {
            archiveArtifacts artifacts: 'ZAP_Reports\\ZAP_Output.html',
                             allowEmptyArchive: true
        }
    }
}
